datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model product {
    id         String @id @default(uuid()) @db.Uuid
    name       String
    price      Decimal
    category   String

    variations variation[]
}

model variation {
    id         String @id @default(uuid()) @db.Uuid
    product_id String @db.Uuid
    name       String
    image_url  String
    in_stock   Int

    product product @relation(fields: [product_id], references: [id], onDelete: Cascade)
}